{% extends 'base.html.twig' %}

{% block title %}detail{% endblock %}

{% block body %}
    <li>{{ usr.pseudo }}</li>

    <table>
        <thead>
        <tr>
            <th colspan="2">The table header</th>
        </tr>
        </thead>
        <tbody>

            <td>The table body</td>
            {% for amis in  usr.lstAmis %}
            <tr>
                <td> {{ amis.pseudo }} ({{ amis.lsAmis|length }})</td>
                {% if (usr.lang1 == 'true') %}
                    Angular
                {% endif %}

                {% if (usr.lang2 == 'true') %}
                    Svelt
                {% endif %}

                {% if (usr.lang3 == 'true') %}
                    Spring
                {% endif %}

                {% if (usr.lang4 == 'true') %}
                    VueJs
                {% endif %}
            </tr>
            {% endfor %}

        </tbody>
    </table>



{% endblock %}